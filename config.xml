<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.yalldo.com"
        version   = "1.0.5">

   <name>Yalldo Flying</name>

   <description>YALLDO Flying will get you in the air with your buddies or with new people. Cause flying together is always more fun.</description>

   <author href="http://www.yalldo.com" email="info@yalldo.com">Yalldo</author>

   <feature name="http://api.phonegap.com/1.0/network"/>
   <feature name="http://api.phonegap.com/1.0/media"/>
   <feature name="http://api.phonegap.com/1.0/file"/>
   <feature name="http://api.phonegap.com/1.0/notification"/>
   <feature name="http://api.phonegap.com/1.0/geolocation"/>
   <feature name="http://api.phonegap.com/1.0/camera"/>
   <feature name="http://api.phonegap.com/1.0/device"/>
   
   <preference name="webviewbounce" value="false" />
   <preference name="phonegap-version" value="2.3.0" />
   <preference name="target-device" value="universal" />
   <preference name="orientation" value="portrait" />
   <preference name="exit-on-suspend" value="false" />
	
   <access origin="*" />

   <!-- Icons -->
   <icon src="icon.png" width="64" height="64" gap:role="default" />
   <icon src="icon72.png" width="72" height="72" gap:platform="android" gap:density="hdpi" />
   <icon src="icon96.png" width="96" height="96" gap:platform="android" gap:density="xhdpi" />
   <icon src="icon72.png" width="72" height="72" gap:platform="ios" />

   <!-- Splash Screens -->
   <gap:splash src="splash.png" />
   <gap:splash src="splash.png" gap:platform="android" gap:density="ldpi" />
   <gap:splash src="splash.png" gap:platform="android" gap:density="mdpi" />
   <gap:splash src="splash.png" gap:platform="android" gap:density="hdpi" />
</widget>